.dialogBackground( (click)='close()' )
.dialog
  form()
    .flexContainer
      .row
        .column
          md-input([(ngModel)]='componentData.name', placeholder="Name of the component")
      .row.row--rightAligned
        .md-button-wrapper
          button(md-raised-button, color="danger", type="button", (click)='delete()') Delete
          button(md-raised-button, color="secondary", type="button", (click)='close()') Cancel
          button(md-raised-button, color="primary", type="button", (click)='send()') Save
