.dialogBackground( (click)='close()' )
.dialog
  form((keypress)='eventHandler($event)')
    .flexContainer
      .row
        .column
          md-input([(ngModel)]='componentData.repoName', required, placeholder="Add name for the repository")
      .row.row--rightAligned
        .md-button-wrapper
          button(md-raised-button, color="secondary", type="button", (click)='close()') Cancel
          button(md-raised-button, color="primary", type="button", (click)='send()') Push
